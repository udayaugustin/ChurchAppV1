            <Label x:Name="SkillSet" Style="{StaticResource JobDetailLabel}"/>
            <Label x:Name="ExpectedNoticePeriod" Style="{StaticResource JobDetailLabel}"/>
            <Label Text="Job Description:" Style="{StaticResource JobDetailLabel}"/>
            <Label x:Name="JobDescriptionValue" Style="{StaticResource JobDescription}"/>
            
            <Button Text="Refer A Candidate" x:Name="ReferCandidateButton" Clicked="Refer"/>

