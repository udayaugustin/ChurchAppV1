<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HRApp.Views.ReferalDetailPage">
    <NavigationPage.TitleView>
        <Label Text="Job Detail" Style="{StaticResource NavigationLabel}"/>
    </NavigationPage.TitleView>
    <StackLayout>
            <Label x:Name="Name" Style="{StaticResource JobTitleLabel}"/>
            <Label x:Name="Phone" Style="{StaticResource JobDetailLabel}"/>
            <Label x:Name="ApplyingRole" Style="{StaticResource JobDetailLabel}"/>
            <Label x:Name="YearsOfExperience" Style="{StaticResource JobDetailLabel}"/>
            <Label x:Name="CurrentCompany" Style="{StaticResource JobDetailLabel}"/>
            <Label x:Name="CurrentLocation" Style="{StaticResource JobDetailLabel}"/>
            <Label x:Name="OpenForRelocation" Style="{StaticResource JobDetailLabel}"/>
            <Label x:Name="UploadedFile" Style="{StaticResource JobDetailLabel}"/>
    </StackLayout>
</ContentPage>
